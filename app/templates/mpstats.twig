{% extends "default.twig" %}

{% block body %}
    <h1>Marketplace Projects l10n Overview</h1>
    <table id="main_table" class="table table-bordered table-condensed">
        <thead>
            <tr>
                <th>&nbsp;</th>
                {% for header in table_header %}
                    <th colspan="3">{{ header }}</th>
                {% endfor %}
            </tr>
            <tr>
                <th>Locale</th>
                    {% for i in 1..products_number %}
                        <th><abbr title="Translated">Tr.</abbr></th>
                        <th><abbr title="Untranslated">Un.</abbr></th>
                        <th><abbr title="Completion percentage">%</abbr></th>
                    {% endfor %}
            </tr>
        </thead>
    <tbody>
        {% for row in table_rows %}
            <tr id="row_{{ row.locale }}">
                <th class='rowheader'>
                    <a href='#{{ row.locale }}' id='{{ row.locale }}' class='locale_anchor'>{{ row.locale }}</a>
                </th>
                {% for product in row.products %}
                    <td style="{{ product.style }}">{{ product.translated }}</td>
                    <td style="{{ product.style }}">{{ product.untranslated }}</td>
                    <td style="{{ product.style }}">{{ product.percentage }}</td>
                {% endfor %}
            </tr>
        {% endfor %}
    </tbody>
  </table>
  <p class="lastupdate">Last update: {{ last_update }}</p>
{% endblock %}
